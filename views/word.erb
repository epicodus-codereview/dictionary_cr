<h2><%= @word.word() %></h2>

<% @word.definitions().each do |definition| %>

<li><%= definition.definition() %></li>  

<% end %>

<form action="/add_definition" method="post">
  <input id ='word_id' name='word_id' type='hidden' value='<%= @word.id() %>'>
  <input type='text' name='definition' id='definition' placeholder='Enter a definition here.'>
  <button type='submit' class='btn btn-primary'>add definition</button>

</form>

<a href="/">Go Back</a>


<!-- changed to loop through a word object's definitions array and display each definition -->